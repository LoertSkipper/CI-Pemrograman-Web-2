# ==========================================
# CodeIgniter 4 - Rizal Project .gitignore
# ==========================================

# Composer dependencies
/vendor/

# Environment configuration
.env
.env.*
!.env.example

# Writable directory (runtime-generated)
writable/cache/*
writable/logs/*
writable/session/*
writable/uploads/*
writable/debugbar/*
!writable/index.html

# Logs and temp files
*.log
*.tmp
*.bak
*.swp

# PHPUnit and build artifacts
phpunit.xml
/build/
coverage/
reports/

# IDE & Editor settings
.vscode/
.idea/
*.sublime-project
*.sublime-workspace

# OS-generated files
.DS_Store
Thumbs.db
ehthumbs.db
Desktop.ini

# Backup and archive files
*.zip
*.tar.gz
*.rar
*.7z
*.sql
*.bak

# Node / Frontend (if applicable)
node_modules/
npm-debug.log
yarn-error.log

# Email config (berisi kredensial sensitif)
app/Config/Email.php

# Optional: ignore composer.lock (if shared team environment)
# composer.lock
